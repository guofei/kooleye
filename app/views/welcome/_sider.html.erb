<div class="panel panel-info">
  <div class="panel-heading">
    <%= fa_icon "comments", text: "新着クチコミ・レビュー" -%>
  </div>
  <div class="panel-body">
    <% Comment.take(10).each do |comment| -%>
      <div class="media">
	<div class="pull-right col-xs-4">
	  <%= link_to_thing_small_img comment.thing -%>
	</div>
	<div class="media-body">
	  <div class="media-heading">
	    <%= link_to_comment_user_page comment -%>さん：
	  </div>
	  <%= sanitize comment.short_content -%>
	</div>
      </div>
      <hr class="hr-point">
    <% end %>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <% if @sort == 'sortbynew' -%>
      <%= link_to things_path(sort: 'hot') do fa_icon "external-link", text: "人気アイテム" end -%>
    <% else -%>
      <%= link_to things_path do fa_icon "external-link", text: "新着アイテム" end -%>
    <% end %>
  </div>
  <% @sider_things.each do |thing| -%>
    <div class="panel-body">
      <%= link_to_thing_thumbnail thing -%>
      <%= content_tag(:p, "#{thing.name} #{thing.summary}") -%>
    </div>
  <% end -%>
</div>
