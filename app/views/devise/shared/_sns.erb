<div class=" panel panel-default">
  <div class="panel-heading">簡単ログイン</div>
  <div class="panel-body">
    <div class="row">
      <%- if devise_mapping.omniauthable? %>
	<%- resource_class.omniauth_providers.each do |provider| %>
	  <div class="col-xs-12 text-center">
	    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-#{provider}" do fa_icon "#{provider}", text: "| Connect with #{provider.to_s.titleize}" end %>
	  </div>
	  <br />
	<% end -%>
      <% end -%>
    </div>
  </div>
</div>
