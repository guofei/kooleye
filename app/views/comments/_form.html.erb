<%= simple_form_for([thing, thing.comments.build], remote: true) do |f| %>
  <% if user_signed_in? -%>
    <div class="form-group">
      <%= f.input :content, label: false, input_html: { class: "form-control", rows: "5" } %>
    </div>
    <div class="form-group">
      <label class="checkbox-inline">
	<%= check_box 'sync', 'twitter', {:checked => twitter?} %><%= fa_icon "twitter-square", text: "に投稿" -%>
      </label>
      <label class="checkbox-inline">
	<%= check_box 'sync', 'facebook', {:checked => facebook?} %><%= fa_icon "facebook-square", text: "に投稿" -%>
      </label>
    </div>
  <% else -%>
    <div class="form-group">
      <%= f.input :name, label: "お名前", input_html: { class: "form-control" }  -%>
    </div>
    <div class="form-group">
      <%= f.input :content, label: "コメント", input_html: { class: "form-control", rows: "5" } %>
    </div>
    <%= render partial: 'comments/recaptcha' -%>
  <% end -%>
  <%= f.button :submit, value: t('view.comment.submit'), class: "btn btn-primary" %>
<% end -%>
