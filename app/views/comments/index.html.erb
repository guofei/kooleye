<div class="page-header">
  <h3>Comment</h3>
</div>

<% @thing.comments.each do |comment| -%>
  <div class="media">
    <%= link_to comment.user.url, class: "pull-left" do image_tag comment.user.image end -%>
    <div class="media-body">
      <div class="media-heading">
	<%= link_to comment.user.name, comment.user.url -%>
	<small><%= comment.created_at -%></small>
      </div>
      <%= simple_format comment.content -%>
    </div>
  </div>
<% end -%>

<% if @thing.comments.size > 0 -%>
  <hr />
<% end -%>

<%= simple_form_for([@thing, @thing.comments.build]) do |f| %>
  <div class="form-group">
    <%= f.input :content, label: false, input_html: { class: "form-control", rows: "5" } %>
  </div>
  <div class="form-group">
    <label class="checkbox-inline">
      <%= check_box 'sync', 'twitter', {:checked => twitter?(@thing)} %><%= fa_icon "twitter-square", text: "に投稿" -%>
    </label>
    <label class="checkbox-inline">
      <%= check_box 'sync', 'facebook', {:checked => facebook?(@thing)} %><%= fa_icon "facebook-square", text: "に投稿" -%>
    </label>
  </div>
  <%= f.button :submit, value: t('view.comment.submit'), class: "btn btn-primary" %>
<% end -%>
