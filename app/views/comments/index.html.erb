<div class="page-header">
  <h3>Comment</h3>
</div>

<% @thing.comments.each do |comment| -%>
<div class="media">
  <%= link_to comment.user.url, class: "pull-left" do image_tag comment.user.image end -%>
  <div class="media-body">
    <div class="media-heading">
      <%= link_to comment.user.name, comment.user.url -%>
      <small><%= comment.created_at -%></small>
    </div>
    <%= simple_format comment.content -%>
  </div>
</div>
<% end -%>

<% if @thing.comments.size > 0 -%>
  <hr />
<% end -%>

<%= simple_form_for([@thing, @thing.comments.build]) do |f| %>
<div class="form-group">
  <%= f.input :content, label: false, input_html: { class: "form-control", rows: "5" } %>
</div>
  <%= f.button :submit %>
<% end -%>
