<% k_param = "?k=#{keyword}" if not keyword.blank? %>
<% sort_param = "&sort=#{params[:sort]}" if not params[:sort].blank? -%>
<% style_param = "&style=#{params[:style]}" if not params[:style].blank? -%>

<div class="row">
  <div class="col-xs-12">
    <%= form_tag shops_path, method: "get" do -%>
      <div class="input-group">
	<%= text_field_tag :k, keyword, class: "form-control", id: "search",  placeholder: "Search" -%>
	<%= hidden_field_tag :sort, params[:sort] if sort_param -%>
	<%= hidden_field_tag :style, params[:style] if style_param -%>
	<div class="input-group-btn">
	  <button type="submit" class="btn btn-default">最安値を検索</button>
	</div>
      </div>
    <% end -%>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 text-center">
    <p>
      <div class="btn-group">
	<% if k_param -%>
	  <% if params[:sort] == "price" -%>
	    <%= link_to shops_path + "#{k_param}#{style_param}", class: "btn btn-default" do -%>
	      <%= fa_icon :rocket, text: "人気順" -%>
	    <% end -%>
	    <%= link_to shops_path + "#{k_param}&sort=price#{style_param}", class: "btn btn-default active" do -%>
	      <%= fa_icon :jpy, text: "安値順" -%>
	    <% end -%>
	  <% else -%>
	    <%= link_to shops_path + "#{k_param}#{style_param}", class: "btn btn-default active" do -%>
	      <%= fa_icon :rocket, text: "人気順" -%>
	    <% end -%>
	    <%= link_to shops_path + "#{k_param}&sort=price#{style_param}", class: "btn btn-default" do -%>
	      <%= fa_icon :jpy, text: "安値順" -%>
	    <% end -%>
	  <% end -%>
	  <% if params[:style] == "grid" -%>
	    <%= link_to shops_path + "#{k_param}#{sort_param}", class: "btn btn-default" do -%>
	      <%= fa_icon :list, text: "一覧" -%>
	    <% end -%>
	    <%= link_to shops_path + "#{k_param}#{sort_param}&style=grid", class: "btn btn-default active" do -%>
	      <%= fa_icon :th, text: "写真" -%>
	    <% end -%>
	  <% else -%>
	    <%= link_to shops_path + "#{k_param}#{sort_param}", class: "btn btn-default active" do -%>
	      <%= fa_icon :list, text: "一覧" -%>
	    <% end -%>
	    <%= link_to shops_path + "#{k_param}#{sort_param}&style=grid", class: "btn btn-default" do -%>
	      <%= fa_icon :th, text: "写真" -%>
	    <% end -%>
	  <% end -%>
	<% end %>
      </div>
    </p>
  </div>
</div>
