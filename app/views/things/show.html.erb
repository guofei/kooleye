<div class="page-header">
  <center><h1><%= @thing.name -%> <small><%= @thing.summary -%></small></h1></center>
</div>

<div class="col-xs-12 col-sm-12 col-md-9 col-lg-9">
  <div id="carousel-thing" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% @thing.images.each_with_index do |image, index| -%>
	<% if index == 0 -%>
	  <li data-target="#carousel-thing" data-slide-to="<%= index -%>" class="active"></li>
	<% else -%>
	  <li data-target="#carousel-thing" data-slide-to="<%= index -%>"></li>
	<% end -%>
      <% end -%>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <% @thing.images.each_with_index do |image, index| -%>
	<% if image.file? %>
	  <% if index == 0 -%>
	    <div class="item active">
	      <%= image_tag image.file.url %>
	    </div>
	  <% else -%>
	    <div class="item">
	      <%= image_tag image.file.url %>
	    </div>
	  <% end -%>
	<% end %>
      <% end -%>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-thing" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-thing" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>

  <hr />

  <div class="row">
    <% @thing.images.each_with_index do |image, index| -%>
      <% if image.file? %>
	<div class="col-sm-3 col-md-3">
	  <div class="thumbnail">
	    <%= image_tag image.file.url, style: "cursor:pointer;", onclick: "$('.carousel').carousel(#{index});" %>
	  </div>
	</div>
      <% end %>
    <% end -%>
  </div>

  <hr />

  <%= @thing.introduction -%>


</div>

<div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
  <div class="panel panel-default">
    <div class="panel-body">
      Basic panel example
      <hr />
      <ul class="list-unstyled">
	<li><span class="glyphicon glyphicon-heart-empty"></span> Like</li>
	<li><span class="glyphicon glyphicon-ok-circle"></span> Have</li>
	<li><i class="icon-facebook fa-lg"></i> Facebook</li>
	<li>
	  <%= fa_stacked_icon "twitter", base: "square-o" -%>
	  Twitter
	</li>
	<li>Twitter</li>
	<li><%= fa_icon "camera-retro" -%></li>
	<li><button class="btn btn-facebook"><i class="fa fa-facebook-square"></i> | Connect with Facebook</button>
</li>
      </ul>
    </div>
  </div>
</div>


