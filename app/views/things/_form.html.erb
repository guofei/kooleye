<%= simple_form_for(@thing) do |f| %>
  <%= f.error :images, id: 'images_error' %>
  <%= f.input :token, as: :hidden -%>
  <div class="form-group">
    <%= f.input :name, input_html: { class: "form-control" }  %>
  </div>
  <div class="form-group">
    <%= f.input :video, input_html: { class: "form-control" }  -%>
  </div>
  <div class="form-group">
    <%= f.input :summary, input_html: { class: "form-control" }  %>
  </div>
  <div class="form-group">
    <%= f.input :introduction, input_html: { class: 'ckeditor' } %>
  </div>
  <div class="form-group">
    <label class="checkbox-inline">
      <%= check_box 'sync', 'twitter', {:checked => twitter?(@thing)} %><%= fa_icon "twitter-square", text: "に投稿" -%>
    </label>
    <label class="checkbox-inline">
      <%= check_box 'sync', 'facebook', {:checked => facebook?(@thing)} %><%= fa_icon "facebook-square", text: "に投稿" -%>
    </label>
  </div>
  <%= f.button :submit  %>
<% end %>
