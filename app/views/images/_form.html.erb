<div class="panel panel-default">
  <div class="panel-heading">画像：（出来るだけ複数の画像を追加してくだい）</div>
  <ul class="list-group" id="show-images">
    <% images.each do |image| -%>
      <%= render partial: image %>
    <% end %>
  </ul>
</div>

<% # jquery upload template # %>
<script id="template-upload" type="text/x-tmpl">
  <div class="upload-progress">{%=o.name%}
    <div class="progress progress-striped">
      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
    </div>
  </div>
</script>

<%= simple_form_for(@image, html: { id: "new_upload", multipart: true }) do |f| %>
  <div class="form-group">
    <%= f.input :thing_token, as: :hidden -%>
    <%= f.input :file, label: false, input_html: { id: "upload_file", name: "image[file]", style: "display:none" } %>
    <a id="upload-btn" class="btn btn-primary" >画像を追加する</a>
  </div>
<% end %>

